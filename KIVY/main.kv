# main.kv

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: 0.7, 0.6, 0.45, 1
            Rectangle:
                pos: self.pos
                size: self.size

        FloatLayout:
            size_hint: 1, 1
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            Image:
                source: 'portada.jpg'
                size_hint: 1, 1
                pos_hint: {'center_x':0.5, 'center_y':0.5}

        FloatLayout:
            size_hint: None, None
            size: 1200, 50
            pos_hint: {'center_x':0.5, 'center_y':1.2}

            Label:
                text: "BRIGADA SOLIDARIA"
                font_size: 60
                color: 0.3, 0.1, 0.05, 1
                size_hint: None, None
                size: self.texture_size
                pos_hint: {'center_x':0.5, 'center_y':1.2}                

        FloatLayout:
            size_hint: None, None
            height: '80dp'
            width: self.parent.width
            pos_hint: {'center_x':0.5, 'y':0}

            MDRaisedButton:
                text: "Ir al Mapa"
                size_hint: None, None
                size: 200, 50
                pos_hint: {'center_x':0.25, 'center_y':0.75}
                md_bg_color: 0.5, 0.3, 0.1, 1
                text_color:1,1,1,1
                border_radius:[10,10,10,10]
                elevation:5
                on_press: root.go_to_map()

            MDRaisedButton:
                text: "Ir al Formulario"
                size_hint: None, None
                size: 200, 50
                pos_hint: {'center_x':0.75, 'center_y':0.75}
                md_bg_color: 0.5, 0.3, 0.1, 1
                text_color:1,1,1,1
                border_radius:[10,10,10,10]
                elevation:5
                on_press: root.go_to_form()


<MapScreen>:
    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Color:
                rgba: 0.7, 0.6, 0.45, 1
            Rectangle:
                pos: self.pos
                size: self.size

    FloatLayout:
        size_hint: None, None
        size: 900, 600
        pos_hint: {'center_x':0.5, 'center_y':0.5}

        canvas.before:
            Color:
                rgba: 0.4, 0.2, 0.1, 1
            Line:
                width: 10
                rectangle: (self.x, self.y, self.width, self.height)
        
        # El mapa
        MapView:
            id: mapview  # Asignar un id al MapView
            zoom: 12
            lat: -34.6037  # Coordenadas de Buenos Aires
            lon: -58.3816
            size_hint: 0.9, 0.8  # El mapa ocupa el 80% de la pantalla
            pos_hint: {'center_x':0.5, 'center_y':0.5}

    FloatLayout:
        size_hint: None, None
        height: '80dp'
        width: self.parent.width
        pos_hint: {'center_x':0.5, 'y':0}

        # Botón para cargar los casos desde la API
        MDRaisedButton:
            text: "Mostrar Casos"
            size_hint: None, None
            size: 200, 50
            pos_hint: {'center_x':0.25, 'center_y':0.75}
            md_bg_color: 0.5, 0.3, 0.1, 1
            on_press: root.mostrar_casos(self)
            

        MDRaisedButton:
            text: "Volver al Inicio"
            size_hint: None, None
            size: 200, 50
            pos_hint: {'center_x':0.75, 'center_y':0.75}
            md_bg_color: 0.5, 0.3, 0.1, 1
            on_press: root.go_to_main()


<FormScreen>:
    canvas.before:
        Color:
            rgba: 0.7, 0.6, 0.45, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            spacing:15
            size_hint:None, None
            height: "300dp"
            width: self.parent.width * 0.8
            pos_hint:{"top":1, "center_x":0.5, "center_y":0.5}

            MDTextField:
                id: direccion
                hint_text: "Dirección"
                hint_text_color_focus: 0.6, 0.3, 0.1, 1
                text_color_focus: 0.6, 0.3, 0.1, 1
                font_name: "Roboto-Bold"
                size_hint: 1, None
                mode:"rectangle"
                height: "50dp"
                pos_hint: {"center_x": 0.5}
                on_text: root.on_input_change('direccion', direccion.text)
                line_color_focus:0,0,0,1
                

            MDTextField:
                id: adultos
                hint_text: "Cantidad de adultos"
                hint_text_color_focus: 0.6, 0.3, 0.1, 1
                text_color_focus: 0.6, 0.3, 0.1, 1
                font_name:"Roboto-Bold"
                size_hint: 1, None
                mode:"rectangle"
                height: "50dp"
                pos_hint: {"center_x": 0.5}
                on_text: root.on_input_change('adultos', adultos.text)
                line_color_focus:0,0,0,1
                

            MDTextField:
                id: menores
                hint_text: "Cantidad de menores"
                hint_text_color_focus: 0.6, 0.3, 0.1, 1
                text_color_focus: 0.6, 0.3, 0.1, 1
                font_name:"Roboto-Bold"
                size_hint: 1, None
                mode:"rectangle"
                height: "50dp"
                pos_hint: {"center_x": 0.5}
                on_text: root.on_input_change('menores', menores.text)
                line_color_focus:0,0,0,1

    BoxLayout:
        orientation: 'horizontal'
        size_hint:None, None
        size:"450dp", "60dp"
        pos_hint:{"center_x":0.5, "top":0.2}
        spacing:20
        
        MDRaisedButton:
            text: "Enviar"
            size_hint: None, None
            size: 200, 50
            md_bg_color: 0.5, 0.3, 0.1, 1
            text_color:1,1,1,1
            elevation:3
            border_radius:[10,10,10,10]
            on_press: root.submit_form(direccion.text, adultos.text, menores.text)

        MDRaisedButton:
            text: "Volver al Inicio"
            size_hint: None, None
            size: 200, 50
            md_bg_color: 0.5, 0.3, 0.1, 1
            text_color: 1,1,1,1
            elevation:3
            border_radius:[10,10,10,10]
            on_press: root.go_to_main()
        
    # Etiqueta para mostrar el mensaje de éxito/error
    MDLabel:
        id:message_label
        text: ""
        theme_text_color: "Secondary"
        size_hint_y: None
        height: "40dp"
        halign: "center"
        pos_hint: {"center_x":0.5}
